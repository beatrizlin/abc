<!DOCTYPE html>
<html>
	<head>
		<%- include('../partials/head') -%>
		<%- include('../partials/styles') -%>
	</head>
    <body>
        <%- include('../partials/navbar') -%>
        <div class="row" style="width:50%;margin:0 auto;padding:20px">
            <div class="col-md-12">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <td>檔案</td>
                            <td>檔案名稱</td>
                            <td>檔案大小</td>
                            <td>檔案內容</td>
                        </tr>
                    </thead>
                    <%files.forEach(function(file, index) { %>
                    <tr>
                        <td><%=index+1%></td>
                        <td><a href="/download/<%=file.filename%>"><%=file.filename%></a></td>
                        <td><%=file.filesize%></td>
                        <td><img src="<%=file.filepath%>" style="width:640px;height:480px"/></td>
                    </tr>
                    <% }); %>
                </table>
            </div>
        </div>
        <%- include('../partials/scripts') -%>
    </body>
</html>
